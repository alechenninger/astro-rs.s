---
import ListenMenu from "./ListenMenu.astro";
export interface Props {
	icon: string;
	title: string;
}
const { title, icon } = Astro.props;
---

<div class="from-white to-slate-400 bg-gradient-to-r shadow">
	<nav class="w-full p-4 flex flex-row">
		<div class="max-w-6xl mx-auto px-4">
			<div class="flex-col justify-between">
				<div class="flex space-x-7">
					<a href="/">
						<div>
							<h1 style="text-shadow: 0px 0px 2px rgba(255,255,255,.2);" 
					class="flex-none p-2 pl-4 pr-6 from-slate-800 to-slate-600 bg-gradient-to-r text-slate-100 font-bold text-2xl rounded-lg shadow-lg">{icon} &ThickSpace;{title}</h1>		
						</div>
					</a>
					<div class="flex-1"></div>
					<!-- Primary Navbar items -->
					<div class="hidden md:flex items-center space-x-1">
						<button type="button" class="inline-flex justify-center w-full rounded-md px-2 py-2 text-sm font-medium text-gray-500 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-100" id="about-button" aria-expanded="true" aria-haspopup="true" onclick="location.href = '/about';">
							About
						</button>
						<div class="m-auto flex-none">
							<ListenMenu></ListenMenu>
					</div>
					</div>
				</div>
				
				<!-- Mobile menu button -->
				<div class="md:hidden flex items-center">
					<button class="outline-none mobile-menu-button">
					<svg class=" w-6 h-6 text-gray-500 hover:text-gray-500 "
						x-show="!showMenu"
						fill="none"
						stroke-linecap="round"
						stroke-linejoin="round"
						stroke-width="2"
						viewBox="0 0 24 24"
						stroke="currentColor">
						<path d="M4 6h16M4 12h16M4 18h16"></path>
					</svg>
				</button>
				</div>
			</div>
		</div>
		<!-- mobile menu -->
		<div class="hidden mobile-menu">
			<button type="button" class="inline-flex justify-center w-full rounded-md px-2 py-2 text-sm font-medium text-gray-500 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-100" id="about-button" aria-expanded="true" aria-haspopup="true" onclick="location.href = '/about';">
				About
			</button>
			<div class="m-auto flex-none"><ListenMenu></ListenMenu></div>
			
		</div>
		<script>
			const btn = document.querySelector("button.mobile-menu-button");
			const menu = document.querySelector(".mobile-menu");

			btn.addEventListener("click", () => {
				menu.classList.toggle("hidden");
			});
		</script>
	</nav>
	<slot/>
</div>
<style>
</style>

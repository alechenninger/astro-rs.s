---
import ListenMenu from "./ListenMenu.astro";
export interface Props {
	icon: string;
	title: string;
}
const { title, icon } = Astro.props;
---
<nav class="w-full p-4 flex flex-row mb-4">
	<h1 style="text-shadow: 0px 0px 2px rgba(255,255,255,.2);" 
			class="flex-none p-2 pl-4 pr-6 from-slate-800 to-slate-600 bg-gradient-to-r text-slate-100 font-bold text-2xl rounded-lg shadow-lg">{icon} &ThickSpace;{title}</h1>
	<div class="flex-1"></div>
	<div class="m-auto flex-none px-4 py-2 text-sm font-medium">
		<div>
			<button type="button" class="inline-flex justify-center w-full rounded-md px-2 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-100" id="about-button" aria-expanded="true" aria-haspopup="true">
				About
			</button>
		</div>
	</div>
	<div class="m-auto flex-none">
			<ListenMenu></ListenMenu>
	</div>
</nav>
<style>
</style>

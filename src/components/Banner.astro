---
import bannerImage from "../assets/running-silhouettes.svg";
export interface Props {
  subtitle: string;
  blurb: string;
}
const { subtitle, blurb } = Astro.props;
---

<!-- Or 6xl and gap 10? -->
<div
  class="pt-1 pb-5 px-8 mb-8 sm:mx-5 m-auto max-w-6xl md:pt-4 md:pb-12 md:px-24 md:mb-8 md:flex gap-12"
>
  <div class="basis-3/5 md:pr-4">
    <h2
      class="text-lg text-center md:text-left md:text-xl lg:text-4xl pb-4 font-semibold"
    >
      {subtitle}
    </h2>
    <p class="text-xs text-center md:text-left md:text-lg">{blurb}</p>
  </div>
  <div class="flex grid place-items-center">
    <img class="w-24 md:w-48 lg:w-64 drop-shadow" src={bannerImage} />
  </div>
</div>

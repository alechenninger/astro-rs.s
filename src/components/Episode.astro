---
import icon from '../assets/chat.svg';
export interface Props {
  episode: number;
  title: string;
  description: string;
  date: Date;
}
const { episode, title, description, date } = Astro.props as Props;
---
<div class="flex max-w-4xl mx-auto p-4 m-8 gap-4 bg-gray-50 rounded-xl shadow-lg">
  <div class="flex flex-col items-stretch px-6">
    <img class="flex-none" src={icon}>
    <div class="flex-1"></div>
    <button class="flex-none p-2">Listen</button>
  </div>
  <div>
    <h2 class="text-2xl py-2">rs.s/{episode}: {title}</h2>
    <div class="pb-4">{description}</div>
  </div>
  <div class="flex-1"></div>
  <div class="flex-none">
    <span>{date.toLocaleDateString()}</span>
  </div>
</div>